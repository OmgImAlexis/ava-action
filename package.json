{
  "name": "ava-action",
  "version": "1.0.0",
  "private": true,
  "description": "GitHub Action ðŸš€ JavaScript test runner",
  "keywords": [
    "ava",
    "code",
    "quality",
    "test",
    "test-runner",
    "github-action"
  ],
  "license": "MIT",
  "homepage": "https://github.com/omgimalexis/ava-action#readme",
  "author": "Alexis Tyler <xo@wvvw.me> (wvvw.me)",
  "repository": "git+ssh://git@github.com/omgimalexis/ava-action.git",
  "bugs": {
    "url": "https://github.com/omgimalexis/ava-action/issues"
  },
  "engines": {
    "node": ">=10.15",
    "npm": ">=6.4"
  },
  "main": "index.js",
  "scripts": {
    "test": "ava"
  },
  "dependencies": {
    "@actions/core": "^1.1.3",
    "@actions/exec": "^1.0.1",
    "@actions/github": "^1.1.0",
    "ava": "^2.4.0",
    "ava-tap-json-parser": "github:omgimalexis/ava-tap-json-parser#master"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.1.0",
    "eslint-config-xo-space": "^0.21.0",
    "eslint-plugin-prettier": "^3.1.0",
    "prettier": "^1.18",
    "xo": "^0.25.3"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "parser": "babel-eslint",
    "extends": [
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "semi": true,
          "useTabs": false,
          "bracketSpacing": false
        }
      ],
      "camelcase": [
        "error",
        {
          "properties": "never"
        }
      ]
    }
  },
  "xo": {
    "space": true,
    "prettier": true
  }
}
